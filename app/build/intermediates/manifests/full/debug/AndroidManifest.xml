<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mtdbustransit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android.mtdbustransit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.RoutePlannerActivity"
            android:label="@string/title_activity_route_planner"
            android:parentActivityName="com.example.android.mtdbustransit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mtdbustransit.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName="com.example.android.mtdbustransit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mtdbustransit.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.RoutePlannerStops"
            android:label="@string/title_activity_route_planner_stops"
            android:parentActivityName="com.example.android.mtdbustransit.RoutePlannerActivity" >
        </activity>
    </application>

</manifest>