<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mtdbustransit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android.mtdbustransit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.RoutePlannerActivity"
            android:label="@string/title_activity_route_planner"
            android:parentActivityName="com.example.android.mtdbustransit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mtdbustransit.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName="com.example.android.mtdbustransit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mtdbustransit.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.RoutePlannerStopsActivity"
            android:label="@string/title_activity_route_planner_stops"
            android:parentActivityName="com.example.android.mtdbustransit.RoutePlannerActivity" >
        </activity>
        <activity
            android:name="com.example.android.mtdbustransit.Itineraries"
            android:label="@string/title_activity_itineraries" >
        </activity>

        <provider
            android:name="com.example.android.mtdbustransit.data.StopsListProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />

        <!-- SyncAdapter's dummy authentication service -->
        <service android:name="com.example.android.mtdbustransit.sync.MTDBusTransitAuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- The SyncAdapter service -->
        <service
            android:name="com.example.android.mtdbustransit.sync.MTDBusTransitSyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
    </application>

</manifest>